@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="row">
        <div class="col-md-4">
    <h1>Login</h1>
            @if (ViewData["message"] != null)
            {
                <div class="alert alert-danger">
                    @ViewData["message"]
                </div>
            }
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for=@Model.SystemAccount.AccountEmail class="control-label"></label>
            <input asp-for=@Model.SystemAccount.AccountEmail class="form-control" />
            <span asp-validation-for=@Model.SystemAccount.AccountEmail class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for=@Model.SystemAccount.AccountPassword class="control-label"></label>
            <input asp-for=@Model.SystemAccount.AccountPassword class="form-control" />
            <span asp-validation-for=@Model.SystemAccount.AccountPassword class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    </div>
    </div>
</div>
